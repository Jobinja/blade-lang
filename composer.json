{
  "name": "jobinja/blade-lang",
  "description": "Blade directive and extensions used for language related things.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "blade",
    "templating",
    "performance",
    "laravel",
    "language",
    "lang"
  ],
  "authors": [
    {
      "name": "Reza Shadman",
      "email": "pcfeeler@gmail.com"
    }
  ],
  "require": {
    "php": "^5.5.9 || ^7.0",
    "illuminate/view": "5.1.* || 5.2.* || 5.3.*",
    "illuminate/contracts": "5.1.* || 5.2.* || 5.3.*",
    "illuminate/support": "5.1.* || 5.2.* || 5.3.*"
  },
  "require-dev": {
    "illuminate/console": "5.1.* || 5.2.* || 5.3.*",
    "illuminate/view": "5.1.* || 5.2.* || 5.3.*",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "^4.0 || ^5.0"
  },
  "autoload": {
    "psr-4": {
      "JobinjaTeam\\BladeLang\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JobinjaTeam\\BladeLang\\Test\\": "tests/"
    }
  },
  "prefer-stable": true,
  "minimum-stability": "dev",
  "scripts": {
    "test" : "phpunit --colors=always",
    "test:ci": "composer test -- --verbose --coverage-text --coverage-clover=coverage.xml"
  }
}
